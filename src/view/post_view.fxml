<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.*?>

<HBox fx:id="postHBox" alignment="CENTER_LEFT" prefHeight="150.0" prefWidth="860.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
  <!-- TODO Add Nodes -->
  <children>
    <ImageView fx:id="postImageView" fitHeight="140.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
      <image>
        <Image url="@../../images/No_image_available.jpg" />
      </image>
    </ImageView>
    <GridPane id="descriptionLabel" prefWidth="600.0" style="-fx-text-fill: black;">
      <children>
        <Label fx:id="titleLabel" text="title:xxxxx" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
          <font>
            <Font size="12.0" fx:id="x2" />
          </font>
        </Label>
        <Label fx:id="statusLabel" font="$x2" text="status:open" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" />
        <Label fx:id="descriptionLabel" font="$x2" text="description:xxxxxxxxxxxx" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" />
        <Label fx:id="label1" font="$x2" text="" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
        <Label fx:id="label2" font="$x2" text="" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
        <Label fx:id="label3" font="$x2" text="" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
        <Label fx:id="label4" font="$x2" text="" textOverrun="CLIP" wrapText="true" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" />
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <HBox.margin>
        <Insets />
      </HBox.margin>
    </GridPane>
    <AnchorPane prefHeight="200.0" prefWidth="100.0">
      <children>
        <Button fx:id="btnReply" layoutX="15.0" layoutY="57.0" mnemonicParsing="false" onAction="#handleReplyEvent" text="Reply">
          <font>
            <Font size="15.0" fx:id="x1" />
          </font>
        </Button>
        <Button fx:id="btnDetails" font="$x1" layoutX="10.0" layoutY="57.0" mnemonicParsing="false" onAction="#handleMoreDetailsEvent" text="Details" wrapText="false" />
      </children>
    </AnchorPane>
  </children>
  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
  </padding>
</HBox>
